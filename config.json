{
  "mcp_architecture": {
    "type": "distributed",
    "description": "Arquitetura modular com orquestrador e serviços especializados"
  },
  "services": {
    "mcp-orquestrador": {
      "path": "./mcp-orquestrador",
      "port": 8001,
      "role": "orchestrator",
      "description": "Coordena análises e gera relatórios consolidados",
      "dependencies": ["mcp-analise"]
    },
    "mcp-analise": {
      "path": "./mcp-analise",
      "port": 8002,
      "role": "analyzer",
      "description": "Realiza análises específicas de código",
      "dependencies": []
    }
  },
  "communication": {
    "protocol": "stdio",
    "timeout": 30,
    "retry_attempts": 3
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}